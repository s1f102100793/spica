datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model Employee {
  name        String
  email       String   @unique
  firebaseUid String   @id
  createdAt   DateTime
}

model EmployeeProfile {
  id            String   @id
  employeeId    String
  name          String
  profile_image String
  createdAt     DateTime
}
